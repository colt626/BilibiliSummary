{
    "manifest_version": 3,
    "name": "Summary for Bilibili",
    "version": "1.0.0",
    "icons": {
      "16": "logo.png",
      "32": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    },
    "content_scripts": [
      {
        "matches": [ "https://www.bilibili.com/video/*" ],
        "js": [ "src/content-scripts/main.ts"],
        "run_at": "document_idle"
      },
      {
        "matches": [ "https://chat.openai.com/chat" ],
        "js": [ "src/chat/main.ts"],
        "run_at": "document_idle"
      }
    ],
    "permissions": [
      "unlimitedStorage",
      "storage"
    ],
    "background": {
      "service_worker": "src/background/index.ts",
      "type": "module"
    }
  }

 